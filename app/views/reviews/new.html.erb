<h1>Review Form for <%= @restaurant.name %> </h1>

<%= form_for [@restaurant, @review] do |f| %>
  <div class="row">
    <%= f.label :rating %>
    <%= f.text_field :rating %>
  </div>
  <div class="row">
    <%= f.label :body, "Review"%>
    <%= f.text_area :body %>
  </div>
  <div class="button">
    <%= f.submit "Add Review" %>
  </div>
<% end %>
