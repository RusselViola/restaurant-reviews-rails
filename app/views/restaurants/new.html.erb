<h2>New Restaurant Form</h2>

<%= form_for @restaurant do |f| %>
  <div class="row">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="row">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>
  <div class="row">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div class="row">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>
  <div class="row">
    <%= f.label :zip %>
    <%= f.text_field :zip %>
  </div>
  <div class="input-box">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="button">
    <%= f.submit "Add Restaurant" %>
  </div>
<% end %>
